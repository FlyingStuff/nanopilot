{% for dir in include_directories %}
PROJINC += $(PROJROOT)/{{ dir }}
{% endfor %}

{% for file in target.arm + source %}
{%- if file.endswith('.c') %}PROJCSRC += $(PROJROOT)/{{ file }}
{% elif file.endswith('.s') %}PROJASMSRC += $(PROJROOT)/{{ file }}
{% elif file.endswith('.cpp') %}PROJCPPSRC += $(PROJROOT)/{{ file }}
{% endif -%}{% endfor %}